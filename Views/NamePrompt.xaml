<UserControl x:Class="MMCore.Views.NamePrompt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">
    <StackPanel Width="360" Margin="8">
        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>

        <TextBox x:Name="NameBox"
                 Margin="0,12,0,0"
                 md:HintAssist.Hint="{Binding Prompt, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{x:Static md:DialogHost.CloseDialogCommand}" />
            <Button Content="OK"
                    Margin="8,0,0,0"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{x:Static md:DialogHost.CloseDialogCommand}"
                    CommandParameter="{Binding ElementName=NameBox, Path=Text}" />
        </StackPanel>
    </StackPanel>
</UserControl>